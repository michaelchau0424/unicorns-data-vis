{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "vconcat": [
    {
      "width": 1250,
      "height": 550,
      "title": "Number of Unicorns from each Country",
      "projection": {
        "type": "equalEarth"
      },
      "data": {
        "url": "https://raw.githubusercontent.com/michaelchau0424/unicorns-data-vis/master/ne_110m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "layer": [
        {
          "transform": [
            {
              "calculate": "'Data is not available in ' + datum.properties.NAME_LONG",
              "as": "note"
            }
          ],
          "mark": {
            "type": "geoshape",
            "fill": "lightgray",
            "stroke": "white"
          },
          "encoding": {
            "tooltip": {
              "field": "note"
            }
          }
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
            "format": {
              "type": "topojson",
              "feature": "oceans"
            }
          },
          "mark": {
            "type": "geoshape",
            "fill": "#eaf4fd"
          }
        },
        {
          "transform": [
            {
              "lookup": "properties.NAME_LONG",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/michaelchau0424/unicorns-data-vis/master/data/NumberOfUnicornCompaniesByCountry.csv"
                },
                "key": "Country",
                "fields": [
                  "UnicornCount"
                ]
              }
            },
            {
              "calculate": "datum.UnicornCount",
              "as": "Number of Unicorns (Log Scale)"
            }
          ],
          "mark": {
            "type": "geoshape",
            "stroke": "black"
          },
          "params": [
            {
              "name": "highlight",
              "select": {
                "type": "point",
                "on": "mouseover"
              }
            },
            {
              "name": "select",
              "select": "point"
            }
          ],
          "encoding": {
            "color": {
              "field": "Number of Unicorns (Log Scale)",
              "type": "quantitative",
              "scale": {
                "type": "log",
                "scheme": "purplered"
              },
              "legend": {
                "orient": "top"
              }
            },
            "tooltip": [
              {
                "field": "properties.NAME_LONG",
                "type": "nominal",
                "title": "Country"
              },
              {
                "field": "Number of Unicorns (Log Scale)",
                "type": "quantitative",
                "title": "Number of Unicorns"
              }
            ],
            "strokeWidth": {
              "condition": [
                {
                  "param": "select",
                  "empty": false,
                  "value": 3
                },
                {
                  "param": "highlight",
                  "empty": false,
                  "value": 2
                }
              ],
              "value": 0.4
            }
          }
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/michaelchau0424/unicorns-data-vis/master/ne_110m.json",
            "format": {
              "type": "topojson",
              "feature": "ne_110m_graticules_30"
            }
          },
          "mark": {
            "type": "geoshape",
            "fill": null,
            "stroke": "lightgrey"
          }
        }
      ]
    },
    {
      "width": 700,
      "transform": [
        {
          "lookup": "properties.NAME_LONG",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/michaelchau0424/unicorns-data-vis/master/data/Unicorn_Companies_clean2.csv"
            },
            "key": "Country",
            "fields": [
              "Company",
              "Valuation"
            ]
          }
        },
        {
          "joinaggregate": [
            {
              "op": "sum",
              "field": "Valuation",
              "as": "ValuationSumByCountry"
            }
          ],
          "groupby": [
            "Country"
          ]
        },
        {
          "calculate": "datum.Valuation",
          "as": "Valuation from Country"
        },
        {
          "filter": {
            "param": "select",
            "empty": false
          }
        }
      ],
      "mark": {
        "type": "arc"
      },
      "encoding": {
        "theta": {
          "field": "ValuationSumByCountry",
          "type": "quantitative"
        },
        "color": {
          "field": "datum.Company",
          "type": "nominal"
        }
      }
    }
  ],
  "config": {}
}