{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "config": {
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    }
  },
  "padding": {
    "left": 0,
    "top": 0,
    "right": 0,
    "bottom": 0
  },
  "title": "Top 5 Unicorn Industries ranked over time",
  "data": {
    "url": "https://raw.githubusercontent.com/michaelchau0424/unicorns-data-vis/master/data/UnicornDataForBump.csv"
  },
  "encoding": {
    "x": {
      "field": "YearJoined",
      "type": "ordinal",
      "axis": {
        "grid": false,
        "ticks": false
      }
    },
    "y": {
      "field": "rank",
      "type": "quantitative",
      "scale": {
        "domain": [
          5.4,
          1
        ]
      },
      "axis": {
        "grid": false,
        "ticks": false,
        "labels": false,
        "title": null
      }
    }
  },
  "layer": [
    {
      "mark": {
        "type": "point",
        "size": 400,
        "filled": true
      },
      "params": [
        {
          "name": "industrySelect",
          "select": {
            "type": "point",
            "fields": [
              "Industry"
            ]
          },
          "bind": "legend"
        },
        {
          "name": "yearRangeSlider",
          "bind": {
            "input": "range",
            "min": 2015,
            "max": 2022,
            "step": 1
          }
        }
      ],
      "encoding": {
        "color": {
          "field": "Industry",
          "scale": {
            "scheme": "pastel1"
          }
        },
        "tooltip": [
          {
            "field": "Industry"
          },
          {
            "field": "YearJoined",
            "title": "Year Joined"
          },
          {
            "field": "NumberOfUnicorns",
            "type": "quantitative",
            "title": "Number of Unicorns Joined"
          }
        ],
        "opacity": {
          "condition": {
            "param": "industrySelect",
            "value": 1
          },
          "value": 0.2
        }
      }
    },
    {
      "mark": {
        "type": "line",
        "point": true
      },
      "encoding": {
        "color": {
          "field": "Industry",
          "scale": {
            "scheme": "pastel1"
          }
        },
        "size": {
          "value": 4
        },
        "opacity": {
          "condition": {
            "param": "industrySelect",
            "value": 1
          },
          "value": 0.2
        }
      }
    }
  ]
}