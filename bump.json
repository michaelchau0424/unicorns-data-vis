{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height":450,
  "config": {
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    }
  },
  "padding": {"left": -200, "top": 30, "right": 5, "bottom": 5}, 
  "title": "Top 5 Unicorn Industries ranked over time",
  
  "data": {
    "url": "https://raw.githubusercontent.com/michaelchau0424/unicorns-data-vis/master/data/UnicornDataForBump.csv"
  },
  
 
  "encoding": {
    
    "x":{
      "field":"YearJoined", 
      "timeUnit":"year", 
      "type":"temporal",
      "axis": {"grid": false, "ticks": false}
           
    },
    "y": {
      "field": "rank", 
      "type": "quantitative",
      "scale":{"domain":[5.4,1]},
      "axis": {"grid": false, "ticks": false, "labels": false, "title":null}
    }
    
  },


  "layer": [
    
    {
      "mark":{"type": "line", "point": true},
      "params": [{
        "name": "industrySelect",
        "select": {"type": "point", "fields": ["Industry"]},
        "bind": "legend"
      }],
      
      "encoding": {
        "color":{
          "field":"Industry",
          "scale":{"scheme":"pastel1"}
          
        },
        
        "size":{"value":2},
        "tooltip":[
          {"field":"Industry", "type": "nominal"},
          {"field":"YearJoined", "timeUnit":"year","title":"Year Joined"},
          {"field":"NumberOfUnicorns", "type": "quantitative", "title":"Number of Unicorns Joined"}
        ],
        "opacity": {
          "condition": {"param": "industrySelect", "value": 1},
          "value": 0.2
        }
        
      }
    },

    
    {
      "mark":{
        
        "type": "text",
        "text":["Fintech benefited most from the unicorn boom in 2021"],
        "width":10,
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      
      "encoding": {
        
        "opacity": {
          "condition": {
            "test": "datum['Industry'] == 'Fintech' & datum['YearJoined'] == '1609459200000' ",
            "value": 1
            },
          "value": 0
        },
        "tooltip":[
          {"field":"Industry", "type": "nominal"},
          {"field":"YearJoined", "type": "temporal", "timeUnit":"year", "title":"Year Joined"},
          {"field":"NumberOfUnicorns", "type": "quantitative", "title":"Number of Unicorns Joined"}
        ] 

      }
      
      
    }
    

  ]
  
  
  
  
}